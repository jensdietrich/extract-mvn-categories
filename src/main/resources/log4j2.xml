<Configuration status="info" name="dataacquisition-popularmvn" packages="">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Console>
        <File name="fout-popular" fileName="logs/dataacquisition-popularmvn.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="fout-selenium" fileName="logs/selenium.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="nz.ac.wgtn.ecs.apisurfacestudy.dataacquisition.popularmvn.FetchPopularMvnCategoriesAndArtifacts" level="debug" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="fout-popular"/>
        </Logger>
        <Logger name="nz.ac.wgtn.ecs.apisurfacestudy.dataacquisition.popularmvn.SeleniumUtils" level="debug" additivity="false">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="fout-selenium"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>